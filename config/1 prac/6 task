#!/bin/sh  
line=$(head -n 1 "$1")
case "$line" in
        echo "В первой строке есть комментарии"
        ;;
    \#*)
        echo "В первой строке есть комментарии"
        ;;
    *)
        echo "В первой строке нет комментариев"
        ;;
esac
_______________________________________________________________
chmod +x checker
./checker (файл)
